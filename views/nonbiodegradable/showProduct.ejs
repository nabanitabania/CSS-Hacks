<%- include('../header_ItemPage'); -%>


    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="http://netdna.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" rel="stylesheet">
    <style type="text/css">
    	body{
    color: #1a202c;
    text-align: left;
    background-color: #f5f5f5;    
}
.main-body {
    padding: 15px;
}
.card {
    box-shadow: 0 1px 3px 0 rgba(0,0,0,.1), 0 1px 2px 0 rgba(0,0,0,.06);
}
.card {
    position: relative;
    display: flex;
    flex-direction: column;
    min-width: 0;
    word-wrap: break-word;
    background-color: #fff;
    background-clip: border-box;
    border: 0 solid rgba(0,0,0,.125);
    border-radius: .25rem;
}
.card-body {
    flex: 1 1 auto;
    min-height: 1px;
    padding: 1rem;
}
.gutters-sm {
    margin-right: -8px;
    margin-left: -8px;
}
.gutters-sm>.col, .gutters-sm>[class*=col-] {
    padding-right: 8px;
    padding-left: 8px;
}
.mb-3, .my-3 {
    margin-bottom: 1rem!important;
}
.bg-gray-300 {
    background-color: #e2e8f0;
}
.h-100 {
    height: 100%!important;
}
.shadow-none {
    box-shadow: none!important;
}

    </style>

<script src='https://cdn.tiny.cloud/1/r3opzt8lnx1vb8lrdzaatl3yigfwup22a85eqvl8oufw2nju/tinymce/5/tinymce.min.js' referrerpolicy="origin">
</script>
<script>
  tinymce.init({
    selector: '#msg'
  });
</script>
</head>
<body>
<div class="container mt-5 mb-5">
  
    <div class="main-body">
    
    
          <div class="row gutters-sm">
            <div class="col-md-7 mb-3">
              <div class="card">
                <div class="card-body">
                  <div class="d-flex flex-column align-items-center text-center">
                        <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                          <div class="carousel-inner">
                            <% getItem.image.forEach((img,i)=>{ %>
                            <div class="carousel-item <%= i === 0 ? 'active' : ' ' %>">
                              <img class="d-block w-100" style="width: 100%;" src="<%= img.url %>" alt="...">
                            </div>
                            <% }) %> 
                          </div>
                          <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="sr-only">Previous</span>
                          </a>
                          <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="sr-only">Next</span>
                          </a>
                        </div>
                  </div>
                </div>
              </div>
            </div>
            <div class="col-md-5">
              <div class="section-title mt-5">
                <h2>Product Details</h2>
                <p>Product information.</p>
              </div>
              <hr class="mb-5">
              <div class="card mb-3">
                <div class="card-body">
                  <div class="row">
                    <div class="col-sm-4">
                      <h6 class="mb-0"> Name</h6>
                    </div>
                    <div class="col-sm-8 text-secondary">
                      <%= getItem.name %>
                    </div>
                  </div>
                  <hr>
                  <div class="row">
                    <div class="col-sm-4">
                      <h6 class="mb-0">Price</h6>
                    </div>
                    <div class="col-sm-8 text-secondary">
                     Rs. <%= getItem.price %>
                    </div>
                  </div>
                  <hr>
                  <div class="row">
                    <div class="col-sm-4">
                      <h6 class="mb-0">Description</h6>
                    </div>
                    <div class="col-sm-8 text-secondary">
                      <%= getItem.description %>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
       <div class="container">
          <form action="/nonbiodegradable/item/<%= getItem._id %>"" method="POST">
            <div class="section-title">
              <h2>Contact Seller</h2>
              <p>Inform the Seller for Furthur Help</p>
            </div>
            <hr class="mb-3">
            <div class="mb-3">
              <input style ="display: none;" type="email" class="form-control" id="exampleFormControlInput1" name="email" value =<%= user.email %>>
            </div>
            <div class="mb-3">
              <label >Message For the Seller  :</label>
              <textarea type="text" id="msg" name="msg" class="form-control"  rows="9"></textarea>
            </div>
            <div class="mb-3">
              <button type="submit" class="btn btn-success mb-3">Send Message</button>
            </div>
          </form>
        </div>
    </div>
<script src="http://code.jquery.com/jquery-1.10.2.min.js"></script>
<script src="http://netdna.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"></script>
<script type="text/javascript">
	
</script>
</body>
</html>

<%- include('../footer_ItemPage'); -%>